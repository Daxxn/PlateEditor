<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="Border">
        <Setter Property="Padding" Value="1"/>
        <Setter Property="Margin" Value="1"/>
    </Style>

    <Style TargetType="Border" x:Key="FilesBorder">
        <Setter Property="BorderBrush" Value="AliceBlue"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>

    <Style TargetType="Border" x:Key="PlateBorder">
        <Setter Property="BorderBrush" Value="LightBlue"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>

    <Style TargetType="Border" x:Key="ImageBorder">
        <Setter Property="BorderBrush" Value="CadetBlue"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>

    <Style TargetType="Border" x:Key="PlateListBorder">
        <Setter Property="Margin" Value="4"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="BorderBrush" Value="Blue"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>

    <Style TargetType="GridSplitter">
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="PlateListItemText">
        <Setter Property="Margin" Value="0,0,4,0"/>
    </Style>
</ResourceDictionary>